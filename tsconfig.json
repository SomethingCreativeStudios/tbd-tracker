{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "debug-dist"]
}
