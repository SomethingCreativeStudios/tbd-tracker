{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "watchOptions": {
    "excludeDirectories": ["test-folder"]
  },
  "exclude": ["node_modules", "dist", "debug-dist", "test-folder"]
}
